    <title>Contact</title>
</head>
<body>
<main>
    <div class="container">
        <%- include ('blocks/menu.ejs') %>

        <div class="wrapper">
            <h1>Contact with us:</h1>
            <form method="post" action="/add">
                <input name="your_name" type="text" placeholder="Your name">
                <input name="email" type="text" placeholder="email">
                <input name="topic" type="text" placeholder="Topic">
                <textarea name="actors" cols="30" rows="5" placeholder="Your message"></textarea>
                <button type="submit">Send</button>
            </form>
        </div>
    </div>
</main>

