<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/public/css/style.css">
    <title>Films</title>
</head>
<body>
<main>
    <div class="container">
        <%- include ('blocks/menu.ejs') %>

        <div class="wrapper-table">
            <h1>Films list:</h1>
            <table>
                <tr>
                    <td>N</td>
                    <td>Name on russ</td>
                    <td>Year</td>
                    <td>Original name</td>
                    <td>Actors</td>
                </tr>
                <% for(let i = 0; i < data.length; i++){ %>
                    <tr>
                        <td><%= (i + 1) %></td>
                        <td><%= data[i]['russian_name'] %></td>
                        <td><%= data[i]['year'] %></td>
                        <td><%= data[i]['original_name'] %></td>
                        <td><%= data[i]['actors'] %></td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
</main>


</body>
</html>